<div class="body">
 <% if @range == '2' %>
  <h2>Books search for "<%= @word %>"</h2>
   <table class="table table-hover table-inverse">
    <thead>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </thead>

    <% @book.each do |book| %>
    <tbody>
     <th>
      <%= link_to user_path(book.user) do %>
       <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no2_image.jpg"%>
      <% end %>
     </th>
     <th><%= link_to book_path(book) do %><%= book.title %><% end %></th>
     <th><%= book.body %></th>
    <% end %>
    </tbody>

   </table>

  <% else %>

  <h2>Users search for "<%= @word %>"</h2>
   <table class="table table-hover table-inverse">
    <thead>
     <th>image</th>
     <th>name</th>
     <th colspan="3"></th>
    </thead>

    <% @user.each do |user| %>
    <tbody>
     <th><%= link_to user_path(user) do %>
      <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no2_image.jpg"%></th>
     <% end %>
     <th><%= user.name %></th>
     <th><%= link_to "Show", user_path(user) %></th>
    </tbody>
    <% end %>
   </table>

  <% end %>

</div>